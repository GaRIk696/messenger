<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовый стиль для темы -->
    <style name="Base.Theme.Messenger" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Общие атрибуты для светлой и темной темы -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="backgroundColor">@color/blue</item>
    </style>

    <!-- Основная тема приложения -->
    <style name="Theme.Messenger" parent="Base.Theme.Messenger">
        <!-- Атрибуты, специфичные для темы -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
</resources>